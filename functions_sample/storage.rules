rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.superAdmin == true;
    }

    function isApprovedAdmin() {
      return request.auth != null && request.auth.token.admin == true &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.adminApproved == true;
    }

    match /music/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin() || isApprovedAdmin();
    }

    match /covers/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin() || isApprovedAdmin();
    }
  }
}
